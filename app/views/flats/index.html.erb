<div class="container" style="margin-top: 25px;">
  <div class="row center">
    <div class="col s12">
      <div class="card-panel teal">
        <span class="white-text"><h3>WELCOME TO SHITBNB</h3>
        </span>
      </div>
    </div>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col s12 m6 l4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= flat.name %></span>
          <p>Address: <%= flat.address %></p>
          <br>
          <i class="material-icons tiny">euro_symbol</i>
          <%= flat.price_per_night %>
          <br>
          <i class="material-icons tiny">people</i>
          <%= flat.number_of_guests %>
        </div>
        <div class="card-action">
          <%= link_to "View this Flat", flat_path(flat)%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
