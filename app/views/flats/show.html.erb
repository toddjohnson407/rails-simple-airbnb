<div class="container" style="margin-top: 30px;">
  <div class="card large blue lighten-5">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="/assets/shitty-apartment-1.jpg">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= @flat.name %><i class="material-icons right">more_vert</i></span>
      <p><%= link_to "Book this Flat", flat_path(@flat)%></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
      <p>Location: <%= @flat.address %></p>
      <p><%= @flat.description %></p>
    </div>
  </div>
</div>
